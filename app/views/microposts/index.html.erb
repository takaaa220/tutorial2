<% provide(:title, "search") %>
<h1>Microposts</h1>

<div class="row">
  <div class="search col-md-6 col-md-offset-3">
    <%= form_tag(microposts_path, method: :get) do %>
      <%= text_field_tag :word %>
      <%= submit_tag "検索", name: nil %>
    <% end %>
  </div>
</div>

<% if @microposts %>
  <%= will_paginate %>

  <ul class="users">
    <%= render @microposts %>
  </ul>

  <%= will_paginate %>
<% end %>
