<div class="share">
  <% if micropost.iine?(current_user) %>
    <%= form_for(micropost.likes.find_by(user_id: current_user.id),
                  html: { method: :delete }, remote: true) do |f| %>
      <%= button_tag(class: "yes") do %>
        <%= content_tag :i, " #{micropost.likes.count}", class: "fas fa-heart" %>
      <% end %>
    <% end %>
  <% else %>
    <%= form_for(micropost.likes.build, remote: true) do |f| %>
      <%= hidden_field_tag :micropost_id, micropost.id %>

      <%= button_tag(class: "no") do %>
        <%= content_tag :i, " #{micropost.likes.count}", class: "fas fa-heart" %>
      <% end %>
    <% end %>
  <% end %>
</div>
