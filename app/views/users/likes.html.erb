<% provide(:title, "Likes") %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= gravatar_for @user %>
      <h1><%= @user.name %></h1>
      <span><%= link_to "view my profile", @user %></span>
      <span><b>Miroposts:</b> <%= @user.microposts.count %></span>
    </section>
    <section class="stats">
      <%= render "shared/stats" %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3>Likes</h3>
    <% if @likes.any? %>
      <ol class="microposts">
        <%= render @likes %>
      </ol>
      <%= will_paginate @likes %>
    <% end %>
  </div>
</div>
